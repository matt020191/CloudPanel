@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using CloudPanel

@{
    Layout = "__master.cshtml";

    string companyCode = this.RenderContext.Context.GetCompanyCode();
}


<div id="page-heading">
    <ol class="breadcrumb">
        <li><a href="~/dashboard">Dashboard</a></li>
        <li><a href="~/company/@companyCode/overview">@this.RenderContext.Context.GetCompanyName()</a></li>
        <li>Exchange</li>
        <li class="active">Public Folders</li>
    </ol>

    <h1>Public Folders</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Public Folders</div>
                <div class="panel-body">
                    <form id="publicFolders">
                        <p class="text-center">
                            @if (Model.plan > 0)
                            {
                                <button type="submit" class="btn btn-danger">Disable</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">Enable</button>
                            }
                        </p>
                    </form>
                </div>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>

@section JAVASCRIPT{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}