                                    <table class="table table-condensed table-striped">
                                        <thead>
                                            <tr>
                                                <th>Column</th>
                                                <th>Information</th>
                                                <th>Is Required</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>DisplayName</td>
