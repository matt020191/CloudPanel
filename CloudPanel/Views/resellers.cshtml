                            <label for="focusedinput" class="col-sm-3 control-label">Website</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="Website" name="Website" data-parsley-type="url">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section JAVASCRIPT{
    <script src="~/Content/plugins/datatables-1.10.2/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatables-1.10.2/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/moment/moment-with-locales.js"></script>
    <script src="~/Content/plugins/form-parsley-new/parsley.min.js"></script>
    <script src="~/Content/plugins/form-select2/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ajaxStop($.unblockUI);
            $(".populate").select2({ width: 'resolve' });
            AddFormHandlers();

            $("#dataTable").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    type: 'GET',
                    dataType: 'json',
                    error: function (xhr) {
                        ShowError(xhr);
                    },
                },
                "columns": [
                    { "data": "companyName", "render": function (data, type, full, meta) { return '<a href="@Url.Content("~/companies/")' + full["companyCode"] + '">' + data + '</a>'; } },
                    { "data": "companyCode" },
                    { "data": "created", "render": function (data, type, full, meta) { return moment(data).format('LLLL'); } },
                    { "data": "totalCompanies" },
                    { "data": "companyCode", "orderable": false, "className": "text-right", "render": function (data, type, full, meta) { return GetButton(data, full["companyName"]); } }
                ]
            });
        });

        function ReloadResellers() {
            var table = $("#dataTable").DataTable();
            table.ajax.reload();
        }

        function GetReseller(companyCode) {
            $.blockUI();

            var url = "@Url.Content("~/resellers/")" + companyCode;
            $.getJSON(url, function (data) {
                $('#editForm input[name="CompanyCode"]').val(companyCode);
                $('#editForm input[name="CompanyName"]').val(data.reseller.companyName);
                $('#editForm input[name="AdminName"]').val(data.reseller.adminName);
                $('#editForm input[name="AdminEmail"]').val(data.reseller.adminEmail);
                $('#editForm input[name="PhoneNumber"]').val(data.reseller.phoneNumber);
                $('#editForm input[name="Street"]').val(data.reseller.street);
                $('#editForm input[name="City"]').val(data.reseller.city);
                $('#editForm input[name="State"]').val(data.reseller.state);
                $('#editForm input[name="ZipCode"]').val(data.reseller.zipCode);
                $('#editForm input[name="Website"]').val(data.reseller.website);

                var country = data.reseller.country;
                if (!country) {
                    $('#editForm select[name="Country"]').select2("val", "US");
                } else {
                    $('#editForm select[name="Country"]').select2("val", data.reseller.country.toUpperCase());
                }

                $("#editModal").modal();
            }).fail(function (data) {
                ShowError(data);
            }).always(function (data) {
                $(".panel").unblock();
            });
        }

        function AddFormHandlers() {
            $("#addForm").submit(function (event) {
                event.preventDefault();
                var data = $("#addForm").serialize();

                $.blockUI();
                $.post("", data).done(function (returnData) {
                    $("#addModal").modal("hide");
                    ReloadResellers();
                    ShowSuccess(returnData.success);
                }).fail(function (returnData) {
                    ShowError(returnData);
                }).always(function () {
                    $.unblockUI();
                });
            });

            $("#editForm").submit(function (event) {
                event.preventDefault();
                var data = $("#editForm").serialize();

                $.blockUI();
                $.ajax({
                    type: "PUT",
                    data: data
                }).done(function () {
                    $("#editModal").modal("hide");
                    ReloadResellers();
                    ShowSuccess("Successfully updated reseller");
                }).fail(function (returnData) {
                    ShowError(returnData);
                });
            });
        }

        function DeleteReseller(companyCode, companyName) {
            swal({
                title: "Delete "+companyName+"?",
                text: "This action is not reversable",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes",
                cancelButtonText: "No",
                closeOnConfirm: false,
                closeOnCancel: true
            },
            function (isconfirm){
                if (isconfirm) {
                    $.ajax({
                        type: "DELETE",
                        data: { ResellerCode: companyCode }
                    }).done(function () {
                        ReloadResellers();
                        ShowAlert("Deleted!", "Reseller was successfully deleted", "success");
                    }).fail(function (returnData) {
                        ShowError(returnData);
                    });
                }
            });
        }

        function GetButton(companyCode,companyName) {
            return '<div class="btn-group"> \
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"> \
                                Modify <span class="caret"></span> \
                            </button> \
                            <ul class="dropdown-menu" role="menu"> \
                                <li><a href="#" onclick="javascript:GetReseller(\''+companyCode+'\');">Edit</a></li> \
                                <li class="divider"></li> \
                                <li><a href="javascript:;" onclick="javascript:DeleteReseller(\''+companyCode+'\',\''+companyName+'\');">Delete</a></li> \
                            </ul> \
                    </div>';
        }
</script>
}