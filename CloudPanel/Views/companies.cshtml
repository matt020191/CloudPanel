@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using CloudPanel
@using CloudPanel.Base.Config

@{
    Layout = "__master.cshtml";

    bool isResellersEnabled = Settings.ResellersEnabled;
}

@section HEAD{
    <link href="~/Content/plugins/datatables-1.10.2/media/css/jquery.dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins/form-parsley-new/parsley.css" rel="stylesheet" />
    <link href="~/Content/plugins/form-select2/select2.css" rel="stylesheet" />
}

<div id="page-heading">
    <ol class="breadcrumb">
        <li><a href="~/dashboard">Dashboard</a></li>
        @if (isResellersEnabled) { <li><a href="~/resellers">@this.RenderContext.Context.GetResellerName()</a></li> }
        <li class="active">Companies</li>
    </ol>

    <h1>Companies</h1>
    <div class="options">
        <div class="btn-toolbar">
            <a href="#" class="btn btn-primary hidden-xs" data-toggle="modal" data-target="#addModal">Add New</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Select a Company</div>
                <div class="panel-body">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="dataTable">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Company Code</th>
                                <th>Address</th>
                                <th>Created</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Loading...</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal -->
<form id="addForm" action="" method="post" data-parsley-validate>
    <div id="addModal" class="modal fade">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Add Company</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Company Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="CompanyName" name="CompanyName" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Contact Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="AdminName" name="AdminName" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Contact Email</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="AdminEmail" name="AdminEmail" data-parsley-required="true" data-parsley-type="email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Domain Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="DomainName" name="DomainName" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Country</label>
                                    <div class="col-sm-8">
                                        @CloudPanel.CPHtmlHelpers.GetCountries("")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Plan</label>
                                    <div class="col-sm-8">
                                        @CloudPanel.CPHtmlHelpers.GetCompanyPlans(0, "")
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Telephone</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Street</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="Street" name="Street" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">City</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="City" name="City" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">State</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="State" name="State" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Postal Code</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="ZipCode" name="ZipCode" data-parsley-required="true">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-4 control-label">Website</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="Website" name="Website" data-parsley-type="url">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Edit Modal -->
