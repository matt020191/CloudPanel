    <!-- <script type="text/javascript" src="~/content/js/less.js"></script> -->

    @RenderSection("HEAD", false)
</head>

<body class="">
    <header class="navbar navbar-inverse navbar-fixed-top hidden-print" role="banner">
        <a id="leftmenu-trigger" class="tooltips" data-toggle="tooltip" data-placement="right" title="Toggle Sidebar"></a>
        <a id="rightmenu-trigger" class="tooltips" data-toggle="tooltip" data-placement="left" title="Toggle Infobar"></a>

        <div class="navbar-header pull-left">
            <a class="navbar-brand" href="~/" style="background: url('@Url.Content(branding.HeaderLogo)') no-repeat center center;">@branding.Name</a>
        </div>

        <ul class="nav navbar-nav pull-right toolbar">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle username" data-toggle="dropdown"><span class="hidden-xs">John McCartney <i class="fa fa-caret-down"></i></span><img src="~/content/demo/avatar/dangerfield.png" alt="Dangerfield" /></a>
                <ul class="dropdown-menu userinfo arrow">
                    <li class="username">
                        <a href="#">
                            <div class="pull-left"></div>
                            <div class="pull-right"><h5>Howdy, John!</h5><small>Logged in as <span>john2751212121</span></small></div>
                        </a>
                    </li>
                    <li class="userlinks">
                        <ul class="dropdown-menu">
                            <li><a href="#">Edit Profile <i class="pull-right fa fa-pencil"></i></a></li>
                            <li><a href="#">Account <i class="pull-right fa fa-cog"></i></a></li>
                            <li><a href="#">Help <i class="pull-right fa fa-question-circle"></i></a></li>
                            <li class="divider"></li>
                            <li><a href="#" class="text-right">Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
    </header>

    <div id="page-container">
        
        @Html.Partial("__leftmenu.cshtml")

        <div id="page-content">
            <div id="wrap">
                <div id="messages">
                    @if (Model != null)
                    {
                        var dict = ((System.Collections.Generic.IDictionary<string, object>)Model);
                        if (dict.ContainsKey("success")) { 
                            <div class="alert alert-dismissable alert-success"><strong>SUCCESS</strong> @Model.success <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button></div>
                        }
                        if (dict.ContainsKey("info")) { 
                            <div class="alert alert-dismissable alert-info"><strong>IFO</strong> @Model.success <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button></div>
                        }
                        if (dict.ContainsKey("warning")) { 
                            <div class="alert alert-dismissable alert-warning"><strong>WARNING</strong> @Model.warning <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button></div>
                        }
                        if (dict.ContainsKey("error")) { 
                            <div class="alert alert-dismissable alert-danger"><strong>ERROR</strong> @Model.error <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button></div>
                        }
                    }
                </div>

                @RenderBody()
            </div>
        </div>

        <footer role="contentinfo" class="hidden-print">
            <div class="clearfix">
                <ul class="list-unstyled list-inline pull-left">
                    <li><a href="http://www.knowmoreit.com/">KnowMoreIT &copy; 2014</a></li>
                </ul>
                <button class="pull-right btn btn-inverse-alt btn-xs hidden-print" id="back-to-top"><i class="fa fa-arrow-up"></i></button>
            </div>
        </footer>

    </div>

    <!--
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

    <script>!window.jQuery && document.write(unescape('%3Cscript src="~/content/js/jquery-1.10.2.min.js"%3E%3C/script%3E'))</script>
