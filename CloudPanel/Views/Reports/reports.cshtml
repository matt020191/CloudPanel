@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using CloudPanel

@{
    Layout = "__master.cshtml";
}

@section HEAD{
}

<div id="page-heading">
    <ol class="breadcrumb">
        <li><a href="~/dashboard">Dashboard</a></li>
        <li class="active">Reports</li>
    </ol>

    <h1>Reports</h1>
</div>

<div class="container">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Content/img/reports/exchange2013.jpg" alt="Exchange Summary" />
                        <div class="caption">
                            <h3>Exchange Summary</h3>
                            <p>Run a report to view information on a per company basis. This report includes costs, profits, top mailbox plans, archiving information, and much more. </p>
                            <p><a href="~/Reports/exchange/summary" class="btn btn-primary" role="button">Run</a></p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Content/img/reports/exchange2013.jpg" alt="Exchange Detailed" />
                        <div class="caption">
                            <h3>Exchange Detailed</h3>
                            <p>Runs a detailed report that gives information on a per-user basis including the size of the user's mailbox, archive mailbox, and the maximum size set by the plan.</p>
                            <p><a href="~/Reports/exchange/detailed" class="btn btn-primary" role="button">Run</a></p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Content/img/reports/xendesktop7.jpg" alt="Citrix Summary" />
                        <div class="caption">
                            <h3>Citrix Summary</h3>
                            <p>Run a report to view all Citrix desktop groups and Citrix applications on a per company basis. </p>
                            <p><a href="~/reports/citrix/summary" class="btn btn-primary" role="button">Run</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section JAVASCRIPT{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}