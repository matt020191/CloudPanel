@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{string selectedCompanyCode = CloudPanel.NancyContextHelpers.GetSelectedCompanyCode(this.RenderContext.Context);}

@{
    Layout = "__master.cshtml";
}

@section HEAD{
    <link href="~/Content/plugins/datatables-1.10.2/media/css/jquery.dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins/form-parsley-new/parsley.css" rel="stylesheet" />
    <link href="~/Content/js/jqueryui.min.css" rel="stylesheet" />
    <style type="text/css">
        span.tab-space {
            padding-left: 0.5em;
        }
        .dropdown-menu {
            left: 0 !important;
        }
    </style>
}

<div id="page-heading">
    <ol class="breadcrumb">
        <li><a href="~/dashboard">Dashboard</a></li>
        <li><a href="~/company/@selectedCompanyCode/overview">{Company Name}</a></li>
        <li><a href="~/company/@selectedCompanyCode/users">Users</a></li>
        <li class="active">Edit User</li>
    </ol>

    <h1>Edit User</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="editUser" action="" method="post" data-parsley-validate>
                <input type="hidden" name="_method" value="PUT" />
                <div class="panel panel-primary">
                    <div class="panel-heading">Edit User</div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="domtabs">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="tab-container tab-danger">
                                            <ul class="nav nav-tabs">
                                                <li class="active"><a href="#user" data-toggle="tab">User</a></li>
                                                <li class="dropdown">
                                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Email <span class="caret"></span></a>
                                                    <ul class="dropdown-menu">
                                                        <li><a href="#mailbox" data-toggle="tab">Edit</a></li>
                                                        <li><a href="#">Litigation Hold</a></li>
                                                        <li><a href="#">Archiving</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <!-- USER SETTINGS -->
                                                <div class="tab-pane active" id="user">
                                                    <h3>Modify the user's Active Directory settings</h3><br />
                                                    <div class="form-horizontal">
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">First Name</label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="Firstname" name="Firstname" value="@Model.user.Firstname" data-parsley-required="true">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Middle Name</label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="Middlename" name="Middlename" value="@Model.user.Middlename">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Last Name</label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="Lastname" name="Lastname" value="@Model.user.Lastname" data-parsley-required="true">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Display Name</label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="DisplayName" name="DisplayName" value="@Model.user.DisplayName" data-parsley-required="true">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Department</label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="Department" name="Department" value="@Model.user.Department">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- MAILBOX SETTINGS -->
                                                <div class="tab-pane" id="mailbox">
                                                    <h3>Modify the user's email settings</h3><br />
                                                    <div class="form-horizontal">
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Plan</label>
                                                            <div class="col-sm-6">
                                                                @CloudPanel.CPHtmlHelpers.GetMailboxPlans(Model.user.MailboxPlan, selectedCompanyCode, string.Empty)
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Email</label>
                                                            <div class="col-sm-6">
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" id="Middlename" name="Middlename" value="@Model.user.Middlename">
                                                                    <span class="input-group-addon">@@</span>
                                                                    @CloudPanel.CPHtmlHelpers.GetCompanyDomains(selectedCompanyCode, 0, string.Empty)
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="focusedinput" class="col-sm-3 control-label">Size</label>
                                                            <div class="col-sm-6" style="padding-top: 13px">
                                                                <div id="slider-range-min" class="slider bg-yellow"></div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <p class="help-block"><div class="slider-value"> Minimum Value: <span class="slider-value" id="slider-range-min-amount"></span></div></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="btn-toolbar text-right">
                            <button class="btn-default btn">Cancel</button>
                            <button class="btn-primary btn" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section JAVASCRIPT{
    <script src="~/Content/plugins/form-parsley-new/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#slider-range-min").slider({
                range: "min",
                value: 37,
                min: 1,
                max: 700,
                slide: function (event, ui) {
                    $("#slider-range-min-amount").text("$" + ui.value);
                }
            });
        });
    </script>
}